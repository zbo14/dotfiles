[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[commit]
    gpgsign = true

[diff]
    tool = vimdiff

[diff "bin"]
    textconv = hexdump -v -C

[difftool]
    prompt = false

[help]
    autocorrect = 1

[merge]
    log = true

[push]
    default = simple
    followTags = false

[url "git@github.com:"]
    insteadOf = gh:

[url "git@gist.github.com:"]
    insteadOf = gst:
