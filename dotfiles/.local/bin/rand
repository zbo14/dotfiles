#!/bin/bash -e

if [ "$#" -lt 2 ]; then
    echo "Usage: rand <encoding> <numbytes>"
    exit 1
fi

if [ "$1" == "base64" ]; then
    result="$(head -c "$2" /dev/urandom | base64)"
elif [ "$1" == "hex" ]; then
    result="$(xxd -p -l "$2" -c "$2" /dev/urandom)"
else
    echo "Expected encoding to be 'base64' or 'hex'"
    exit 1
fi

echo "$result"
