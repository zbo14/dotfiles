#!/bin/bash -e

if [ -z "$1" ]; then
  echo "Usage: massdns <domain>"
  exit 1
fi

tf="$(mktemp)"

while read -r line; do
  echo "$line.$1" >> "$tf"
done < ~/Projects/wordlists/subdomains.txt

~/Projects/massdns/bin/massdns \
  -o S \
  -r ~/Projects/massdns/lists/resolvers.txt \
  "$tf" \
  2> /dev/null

rm "$tf"
