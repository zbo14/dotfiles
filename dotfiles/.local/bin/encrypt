#!/bin/bash -e

if [ -z "$1" ]; then
  echo "Usage: encrypt <filename>"
  exit 1
fi

base=$(basename "$1")
dir=$(dirname "$1")
cd "$dir"

if [ -d "$base" ]; then
  echo "Zipping $base directory"
  zip -r "$base.zip" "$base"
  rm -r "$base"
fi

if [ ! -f "$base" ]; then
  base="$base.zip"
fi

if [ -f "$base" ]; then
  read -i "k" -r -p "Encrypt with (K)ey or (p)assword: " mode
  mode="${mode,,}"

  if [ "$mode" == "k" ]; then
    echo "Encrypting with key"
    gpg --encrypt --sign "$base"
  elif [ "$mode" == "p" ]; then
    echo "Encrypting with password"
    gpg --symmetric "$base"
  else
    echo "Invalid mode"
    exit 1
  fi

  gpgconf --reload gpg-agent
  rm "$base"
else
  echo "No file or directory $base!"
  exit 1
fi
